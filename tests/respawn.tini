set -e

run_start() {
	mkdir -p "${PIDFILE%/*}"
	/sbin/respawn "$@" >"$PIDFILE"
}

run_stop() {
	/sbin/assassinate "$@" <"$PIDFILE"
	rm -f "$PIDFILE"
}

run_status() {
	if ! [ -e "$PIDFILE" ]
	then
		echo "$PIDFILE: No such pidfile!"
		return 1
	fi

	/sbin/status <"$PIDFILE"
}

run_foreground() {
	"$@"
}

# shellcheck source=service.tini
. "${0%/*}/service"
